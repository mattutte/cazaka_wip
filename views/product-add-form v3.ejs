<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs',{titulo:"Agregar Producto", stylesFile:"styles.css"}) %>
  <link href="/css/productForm v2.css" rel="stylesheet">

  <body>
    <!-- Header -->
    <%- include('./partials/header v2.ejs') %>
      <script type="text/javascript" src="js/productValidation2.js"></script>

      <!-- Main section -->
      <main>
        <form action="/addProduct" id="formAddProduct" enctype="multipart/form-data" method="POST">
          <!-- Title -------------------------------------------------------------------------->
          <div class="title">
            <h2>
              <span>
                Formulario de creación de producto
              </span>
            </h2>
            <p>
            <% if(locals.errores && errores != undefined){ %>
              <% errores.errors.forEach(error =>{ if(typeof error.msg != 'object'){ %>
                  <t3> <%= error.msg %> </t3>
                  <br>
              <% }}) %>
              
              
            <% } %>
          </p>

          </div>
          <!-- Name and Description ----------------------------------------------------------->
          <div class="section-container section-description">
            <div class="listGroup">
              <div class="listGroupBox" id="page_wrapper_attributes">
                <h2>
                  Descripcion del producto
                </h2>
                <p>
                  El comprador necesita esta informacion
                </p>
                <div class="grid" id="page_wrapper_grid">
                  <!-- Nombre ------------------------------------------------>
                  <div class="grid_cell">
                    <div class="grid_cell_wrapper">
                      <div class="listInlineSelect inputField">
                        <div class="listInlineSelect__selectBox">
                          <div class="listInlineSelect__selectBoxLabelWrapper">
                            <div class="inputField__label">
                              <label for="name" class="form-label">
                                <span>Nombre</span>
                              </label>
                            </div>
                          </div>
                          <div class="listInlineSelect__selectBox-activeRegion">
                            <input type="text" name="name" id="name" placeholder="Ej: Remera Juventus"
                              class="form-input">
                          </div>
                          <p class="errorLabel" id="errorNameLabel"> </p>
                        </div>
                      </div>
                    </div>
                  </div>

                  <!-- Categoria ------------------------------------------------>
                  <div class="grid_cell">
                    <div class="grid_cell_wrapper">
                      <div class="listInlineSelect inputField">
                        <div class="listInlineSelect__selectBox">
                          <div class="listInlineSelect__selectBoxLabelWrapper">
                            <div class="inputField__label">
                              <label for="description" class="form-label">
                                <span>Categoria de producto</span>
                              </label>
                            </div>
                          </div>
                          <div class="listInlineSelect__selectBox-activeRegion">
                            <select id="category" name="category" class="form-input">
                              <option value="" selected>Selecciona una categoria</Option>
                              <option value="Jersey">Remera</Option>
                              <option value="Shoes">Botines</Option>
                              <option value="Ball">Balon</Option>
                              <option value="Others">Otros</Option>
                            </select>
                            <p class="errorLabel" id="errorCategoryLabel"> </p>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>


                  <!-- Marca ------------------------------------------------->
                  <div class="grid_cell">
                    <div class="grid_cell_wrapper">
                      <div class="listInlineSelect inputField">
                        <div class="listInlineSelect__selectBox">
                          <div class="listInlineSelect__selectBoxLabelWrapper">
                            <div class="inputField__label">
                              <label for="brand" class="form-label">
                                <span>Marca</span>
                              </label>

                            </div>
                          </div>
                          <div class="listInlineSelect__selectBox-activeRegion">
                            <select id="brand" name="brand" class="form-input">
                              <option value="">Selecciona una marca</option>
                              <% for (let i=0; i < brands.length; i++){ %>
                                <option value=<%=brands[i].id %> ><%= brands[i].name_brand %>
                                </option>
                                <% } %>
                            </select>
                            <p class="errorLabel" id="errorBrandLabel"> </p>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>

                  <!-- Descripción ------------------------------------------->
                  <div class="grid_cell">
                    <div class="grid_cell_wrapper">
                      <div class="listInlineSelect inputField">
                        <div class="listInlineSelect__selectBox">
                          <div class="listInlineSelect__selectBoxLabelWrapper">
                            <div class="inputField__label">
                              <label for="description" class="form-label">
                                <span>Descripción</span>
                              </label>
                            </div>
                          </div>
                          <div class="listInlineSelect__selectBox-activeRegion">
                            <textarea type="text" id="description" name="description" class="form-input"></textarea>
                          </div>
                          <p class="errorLabel" id="errordescriptionLabel"> </p>
                        </div>
                      </div>
                    </div>
                  </div>

                  <!-- Año Correspondiente ------------------------------->
                  <div class="grid_cell">
                    <div class="grid_cell_wrapper">
                      <div class="listInlineSelect inputField">
                        <div class="listInlineSelect__selectBox">
                          <div class="listInlineSelect__selectBoxLabelWrapper">
                            <div class="inputField__label">
                              <label for="caption" class="form-label">
                                <span>Año correspondiente</span>
                              </label>
                            </div>
                          </div>
                          <div class="listInlineSelect__selectBox-activeRegion">
                            <input type="number" id="year" name="year" class="form-input"></input>
                          </div>
                          <p class="errorLabel" id="errorYearLabel"> </p>
                        </div>
                      </div>
                    </div>
                  </div>

                  <!-- Características del producto -------------------------->
                  <div class="grid_cell">
                    <div class="grid_cell_wrapper">
                      <div class="listInlineSelect inputField">
                        <div class="listInlineSelect__selectBox">
                          <div class="listInlineSelect__selectBoxLabelWrapper">
                            <div class="inputField__label">
                              <label for="caption" class="form-label">
                                <span>Características Adicionales</span>
                              </label>
                            </div>
                          </div>
                          <div class="listInlineSelect__selectBox-activeRegion">

                            <!-- Característica 1 ---------------->
                            <div class="caract-input">
                              <label>Estilo</label>
                              <div class="grid_cell">
                                <div class="grid_cell_wrapper">
                                  <div class="listInlineSelect inputField">
                                    <div class="listInlineSelect__selectBox">
                                      <div class="listInlineSelect__selectBoxLabelWrapper">
                                        <div class="inputField__label">
                                          <label for="description" class="form-label">
                                          </label>
                                        </div>
                                      </div>
                                      <div class="listInlineSelect__selectBox-activeRegion">
                                        <select id="features_style" name="features_style" class="form-input">
                                          <option value="">Selecciona un Estilo</Option>
                                          <option value="Long-sleeved">Mangas Largas</Option>
                                          <option value="Short-sleeved">Mangas Cortas</Option>
                                          <option value="Other">Otros</Option>
                                        </select>
                                        <p class="errorLabel" id="errorStyleLabel"> </p>
                                      </div>
                                    </div>
                                  </div>
                                </div>
                              </div>
                            </div>
                            <!-- Característica 2 ---------------->
                            <div class="caract-input">
                              <label>Genero</label>
                              <div class="grid_cell">
                                <div class="grid_cell_wrapper">
                                  <div class="listInlineSelect inputField">
                                    <div class="listInlineSelect__selectBox">
                                      <div class="listInlineSelect__selectBoxLabelWrapper">
                                        <div class="inputField__label">
                                          <label for="description" class="form-label">
                                          </label>
                                        </div>
                                      </div>
                                      <div class="listInlineSelect__selectBox-activeRegion">
                                        <select id="features_genre" name="features_gender" class="form-input">
                                          <option value="">Selecciona un Genero</Option>
                                          <option value="Male">Masculino</Option>
                                          <option value="Female">Femenino</Option>
                                          <option value="Kids">Infantiles</Option>
                                          <option value="Alternative">Alternativo</Option>
                                        </select>
                                        <p class="errorLabel" id="errorGenreLabel"> </p>
                                      </div>
                                    </div>
                                  </div>
                                </div>
                              </div>
                            </div>

                            <!-- Característica 3 ---------------->
                            <div class="caract-input">
                              <label>Uso</label>
                              <div class="grid_cell">
                                <div class="grid_cell_wrapper">
                                  <div class="listInlineSelect inputField">
                                    <div class="listInlineSelect__selectBox">
                                      <div class="listInlineSelect__selectBoxLabelWrapper">
                                        <div class="inputField__label">
                                          <label for="description" class="form-label">
                                          </label>
                                        </div>
                                      </div>
                                      <div class="listInlineSelect__selectBox-activeRegion">
                                        <select id="features_use" name="features_use" class="form-input">
                                          <option value="">Selecciona un Uso</Option>
                                          <option value="Main">Principal</Option>
                                          <option value="Alternative">Alternativo</Option>
                                          <option value="Training">Entrenamiento</Option>
                                          <option value="Others">Otros</Option>
                                        </select>
                                        <p class="errorLabel" id="errorUseLabel"> </p>
                                      </div>
                                    </div>
                                  </div>
                                </div>
                              </div>
                            </div>

                            <!-- Característica 4 ---------------->
                            <div class="caract-input">
                              <label>Otras</label>
                              <textarea type="text" id="features_others" name="features_others"
                                class="form-input-caract" placeholder="Otras caracteristicas del producto..."
                                %>"></textarea>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Pricing detail ----------------------------------------------------------------->
          <div class="section-container section-pricing inner-section">
            <div class="listGroup">
              <div class="listGroupBox" id="page_wrapper_attributes">
                <h2>
                  Pricing
                </h2>
                <p>
                  Informacion relevante sobre precios
                </p>
                <div class="grid" id="page_wrapper_grid">
                  <!-- Precio ------------------------------------------------>
                  <div class="grid_cell">
                    <div class="grid_cell_wrapper">
                      <div class="listInlineSelect inputField">
                        <div class="listInlineSelect__selectBox">
                          <div class="listInlineSelect__selectBoxLabelWrapper">
                            <div class="inputField__label">
                              <label for="regularPrice" class="form-label">
                                <span>Precio</span>
                              </label>
                            </div>
                          </div>
                          <div class="listInlineSelect__selectBox-activeRegion">
                            <span>$ </span><input id="regularPrice" name="regularPrice" placeholder="Ej: 5678"
                              class="form-input">
                          </div>
                          <p class="errorLabel" id="errorPriceLabel"></p>
                        </div>
                      </div>
                    </div>
                  </div>

                  <!-- Precio con descuento --------------------------------->
                  <div class="grid_cell">
                    <div class="grid_cell_wrapper">
                      <div class="listInlineSelect inputField">
                        <div class="listInlineSelect__selectBox">
                          <div class="listInlineSelect__selectBoxLabelWrapper">
                            <div class="inputField__label">
                              <label for="specialPrice" class="form-label">
                                <span>Precio con descuento</span>
                              </label>
                            </div>
                          </div>
                          <div class="listInlineSelect__selectBox-activeRegion">
                            <span>$ </span><input type="text" id="specialPrice" name="specialPrice"
                              placeholder="Ej: 5678" class="form-input">
                          </div>
                          <p class="errorLabel" id="errorSpecialPriceLabel"> </p>
                        </div>
                      </div>
                    </div>
                  </div>

                  <!-- Devolucion -------------------------------------------->
                  <div class="grid_cell">
                    <div class="grid_cell_wrapper">
                      <div class="listInlineSelect inputField">
                        <div class="listInlineSelect__selectBox">
                          <div class="listInlineSelect__selectBoxLabelWrapper">
                            <div class="inputField__label">
                              <label for="devolucion" class="form-label">
                                <span>Permite devolución</span>
                              </label>
                            </div>
                          </div>
                          <div class="listInlineSelect__selectBox-activeRegion">
                            <input type="radio" id="devolucion_si" name="devolucion" value="1"
                              class="check-input"><span>Si</span>
                            <input type="radio" id="devolucion_no" name="devolucion" value="0"
                              class="check-input left_50"><span>No</span>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>

                  <!-- Tiempo de entrega ------------------------------------->
                  <div class="grid_cell">
                    <div class="grid_cell_wrapper">
                      <div class="listInlineSelect inputField">
                        <div class="listInlineSelect__selectBox">
                          <div class="listInlineSelect__selectBoxLabelWrapper">
                            <div class="inputField__label">
                              <label for="tiempoEntrega" class="form-label">
                                <span>Tiempo de Entrega</span>
                              </label>
                            </div>
                          </div>
                          <div class="listInlineSelect__selectBox-activeRegion">
                            <select name="delivery_time" id="deliveryTime" class="form-input">
                              <option value="">Horario de entrega</option>
                              <option value="2hs">Dentro de las 2 hs Siguientes</option>
                              <option value="24hs">En 24 horas</option>
                              <option value="48hs">En 48 horas</option>
                              <option value="1Semana">En una semana</option>
                              <option value="2Semanas">En dos semanas</option>
                            </select>
                            <p class="errorLabel" id="errorDeliveryTimeLabel"> </p>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- Caracteristicas fisicas ------------------------------------------------>
          <div class="section-container section-pictures inner-section">
            <div class="listGroup">
              <div class="listGroupBox" id="page_wrapper_attributes">
                <h2>
                  Editar caracteristicas fisicas del producto
                </h2>
                <div class="grid" id="page_wrapper_grid">

                  <!-- Peso Paquete ------------------------------------------------>
                  <div class="grid_cell">
                    <div class="grid_cell_wrapper">
                      <div class="listInlineSelect inputField">
                        <div class="listInlineSelect__selectBox">
                          <div class="listInlineSelect__selectBoxLabelWrapper">
                            <div class="inputField__label">
                              <label for="regularPrice" class="form-label">
                                <span>Peso del paquete (En gramos)</span>
                              </label>
                            </div>
                          </div>
                          <div class="listInlineSelect__selectBox-activeRegion">
                            <input type="text" id="weight_package" name="weight_package" placeholder="Ej: 1.25"
                              class="form-input">
                          </div>
                          <p class="errorLabel" id="errorWeightLabel"> </p>
                        </div>
                      </div>
                    </div>
                  </div>

                  <!-- Color Disponible ------------------------------------------------>
                  <div class="grid_cell">
                    <div class="grid_cell_wrapper">
                      <div class="listInlineSelect inputField">
                        <div class="listInlineSelect__selectBox">
                          <div class="listInlineSelect__selectBoxLabelWrapper">
                            <div class="inputField__label">
                              <label for="regularPrice" class="form-label">
                                <span>Color Disponible</span>
                              </label>
                            </div>
                          </div>
                          <div class="listInlineSelect__selectBox-activeRegion">
                            <input type="text" id="color_available" name="color_available" placeholder="Rojo"
                              class="form-input">
                          </div>
                          <p class="errorLabel" id="errorColorLabel"> </p>
                        </div>
                      </div>
                    </div>
                  </div>

                  <!-- Talle ------------------------------------------------>
                  <div class="grid_cell">
                    <div class="grid_cell_wrapper">
                      <div class="listInlineSelect inputField">
                        <div class="listInlineSelect__selectBox">
                          <div class="listInlineSelect__selectBoxLabelWrapper">
                            <div class="inputField__label">
                              <label for="description" class="form-label">
                                <span>Talle</span>
                              </label>
                            </div>
                          </div>
                          <div class="listInlineSelect__selectBox-activeRegion">
                            <select id="size_available" name="size_available" class="form-input">
                              <option value="">Ingresa un talle</Option>
                              <option value="Small">Small</Option>
                              <option value="Medium">Medium</Option>
                              <option value="Large">Large</Option>
                              <option value="Extra-Large">Extra-Large</Option>
                            </select>
                          </div>
                          <p class="errorLabel" id="errorSizeLabel"> </p>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>


          <!-- Photo section ------------------------------------------------------------------>
          <div class="section-container section-pictures inner-section">

            <div class="listGroup">
              <div class="listGroupBox" id="page_wrapper_attributes">
                <h2>
                  Editar fotos
                </h2>
                <p>
                  La confianza del comprador aumentara cuando mas fotos haya
                </p>

                <div class="grid" id="page_wrapper_grid">
                  <!-- Imagen principal -------------------------------------->
                  <div class="grid_cell">
                    <div class="grid_cell_wrapper">
                      <div class="listInlineSelect inputField h_align">
                        <div class="listInlineSelect__selectBox">
                          <div class="listInlineSelect__selectBoxLabelWrapper">
                            <div class="inputField__label">
                              <label for="images-main" class="form-label">
                                <span>Imagen principal</span>
                              </label>
                            </div>
                          </div>
                          <div class="listInlineSelect__selectBox-activeRegion">
                            <input type="file" id="image-main" name="image-main" placeholder="Imagen principal"
                              class="form-input">
                          </div>
                          <p class="errorLabel" id="errorImageLabel"></p>
                        </div>
                      </div>
                    </div>
                  </div>
                  <!-- Imagen de frente -------------------------------------->
                  <div class="grid_cell">
                    <div class="grid_cell_wrapper">
                      <div class="listInlineSelect inputField h_align">
                        <div class="listInlineSelect__selectBox">
                          <div class="listInlineSelect__selectBoxLabelWrapper">
                            <div class="inputField__label">
                              <label for="image-front" class="form-label">
                                <span>Imagen de frente</span>
                              </label>
                            </div>
                          </div>
                          <div class="listInlineSelect__selectBox-activeRegion">
                            <input type="file" id="image-front" name="image-front" placeholder="Imagen principal"
                              class="form-input">
                          </div>
                          <p class="errorLabel" id="errorImageFrontLabel"></p>
                        </div>
                      </div>
                    </div>
                  </div>

                  <!-- Imagen de dorso --------------------------------------->
                  <div class="grid_cell">
                    <div class="grid_cell_wrapper">
                      <div class="listInlineSelect inputField h_align">
                        <div class="listInlineSelect__selectBox">
                          <div class="listInlineSelect__selectBoxLabelWrapper">
                            <div class="inputField__label">
                              <label for="images-back" class="form-label">
                                <span>Imagen de dorso</span>
                              </label>
                            </div>
                          </div>
                          <div class="listInlineSelect__selectBox-activeRegion">
                            <input type="file" id="image-back" name="image-back" placeholder="Imagen principal"
                              class="form-input">
                          </div>
                          <p class="errorLabel" id="errorImageBackLabel"></p>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- Buttons section ---------------------------------------------------------------->
          <div class="listGroup" data-key="action-buttons">
            <div class="grid" data-key="action-buttons-box">
              <!-- Guardar cambios -------------------------------------->
              <div class="grid_cell" data-layout="6">
                <div class="grid_cell_wrapper">
                  <button type="submit" class="post-button" data-type="PRIMARY">Guardar producto</button>
                </div>
              </div>
              <!-- Borrar cambios --------------------------------------->
              <div class="grid_cell" data-layout="3">
                <div class="grid_cell_wrapper">
                  <button type="reset" id="buttonSubmit" class="post-button" data-type="DEFAULT">Borrar</button>
                </div>
              </div>
            </div>
          </div>
        </form>
      </main>
      <!-- Footer -->
      <%- include('./partials/footer v2.ejs') %>
  </body>

</html>